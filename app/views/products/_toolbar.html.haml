- # product - local variable
.product-toolbar.btn-group
  =link_to number_to_currency(product.price, precision: 0, unit: 'p', format: '%n%u'), "#", class: "btn btn-small btn-primary"
  =link_to content_tag(:span, '', class: 'caret'), '#', class: "btn btn-small btn-primary dropdown-toggle", 'data-toggle' => "dropdown"
  %ul.dropdown-menu
    %li= link_to "Edit", edit_product_path(product)
    %li= link_to "Delete", product, method: :delete, data: { confirm: "Are you sure?" }

